<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_feed_back_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.codetrack.bscitians.FeedbackForm">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/card_view_border"
            android:elevation="3dp"
            >

            <TextView
                android:text="Help Us Improve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/feedbackheader"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:gravity="center"
                android:padding="10dp"
                />
        </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#EFF0F1"
        android:layout_marginTop="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:hint="Enter Your Email Id"
        android:inputType="textEmailAddress"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#EFF0F1"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSubject"
        android:hint="Enter Your Name"
        android:layout_marginTop="5dp"

        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#EFF0F1"
        android:layout_marginTop="5dp"/>
    <EditText
        android:lines="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextMessage"
        android:hint="Enter Your Message"
        android:layout_marginTop="5dp"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#EFF0F1"
        android:layout_marginTop="5dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSend"
        android:text="Send"
        android:textColor="#ffff"
        android:background="?android:attr/colorFocusedHighlight"
        android:textSize="27dp"
        />

</LinearLayout></ScrollView>