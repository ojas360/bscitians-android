<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:orientation="horizontal"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
    android:baselineAligned="false">


    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="2dp"
        android:weightSum="1"
        android:background="@drawable/shape1"
        >

        <TextView
            android:text="@string/one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_simple_list_number"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textAlignment="center"
           android:layout_gravity="top"
            android:layout_weight="1.0"

            android:gravity="top|bottom|left|right"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp"
        android:layout_weight="1.0"
        >


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/titlepapers"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#151515"
            android:padding="2dp"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        >


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_download_button"
            android:id="@+id/content_download"
            android:layout_weight="1"
            android:background="@drawable/shape7"
            android:padding="3dp"
            android:onClick="download_click"
            android:contentDescription="@string/dl" />
    </LinearLayout>



</LinearLayout>